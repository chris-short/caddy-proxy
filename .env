# Security and optimization configurations

# Environment variables
CADDY_EMAIL=chris@chrisshort.net
DOMAIN=chrisshort.net
TZ=America/New_York

# Docker compose settings
COMPOSE_PROJECT_NAME=caddy-proxy
DOCKER_BUILDKIT=1

# Security settings
CADDY_SECURITY_HEADERS=true
CADDY_AUTO_HTTPS=on

# Logging
CADDY_LOG_LEVEL=INFO
CADDY_ACCESS_LOG=/var/log/caddy/access.log
CADDY_ERROR_LOG=/var/log/caddy/error.log

# Performance
CADDY_EXPERIMENTAL_HTTP3=true
